# Write your MySQL query statement below

select A.student_id, A.student_name, S.subject_name, COUNT(B.subject_name) as attended_exams
from Students A 
cross join Subjects S
left join Examinations B
on A.student_id = B.student_id and B.subject_name = S.subject_name
Group by A.student_id, S.subject_name
order by A.student_id;
